extends base

block content
  main.main
    .card-container
      each book in books
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/books/${book.imageCover}`, alt=`${book.title}`)
            h3.heading-tertirary
              span= book.title 

          .card__details
            h4.card__sub-heading= `ISBN: ${book.isbn}`
            p.card__text= book.description
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              each author in book.author
                span= author
            .card__data
              //- svg.card__icon
              //-   use(xlink:href='/img/icons.svg#icon-calendar')
              //- span= book.publishedAt.toLocaleString('en-us', {month: 'long', year: 'numeric'})
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              span= book.publishedAt.toLocaleString('en-us', {month: 'long', year: 'numeric'})
            

          .card__footer
            //- p
            //-   span.card__footer-value= `$${tour.price}`
            //-   | 
            //-   span.card__footer-text per person
            //- p.card__ratings
            //-   span.card__footer-value= book.ratingsAverage
              | 
              span.card__footer-text= `rating (${tour.ratingsQuantity})`
            a.btn.btn--green.btn--small(href=`/pdfs/${book.content}`) Details
